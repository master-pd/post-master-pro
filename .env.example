# POST-MASTER PRO - Production (sanitized template)
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Base URLs
BASE_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com
ADMIN_URL=https://admin.yourdomain.com
CDN_URL=https://cdn.yourdomain.com

# Database
DATABASE_URL=postgresql://postgres:STRONG_DB_PASSWORD@db-host:5432/postmaster_pro
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE=10000
DB_POOL_ACQUIRE=30000

# JWT
JWT_SECRET=PASTE_YOUR_GENERATED_JWT_SECRET_HERE
JWT_REFRESH_SECRET=PASTE_YOUR_GENERATED_REFRESH_SECRET_HERE
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
JWT_ISSUER=post-master-api

# OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Redis
REDIS_URL=redis://:STRONG_REDIS_PASSWORD@redis-host:6379
REDIS_TTL=86400

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_UPLOAD_PRESET=post_master_preset
CLOUDINARY_VIDEO_PRESET=video_preset
CLOUDINARY_SECURE=true

# Supabase (optional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_BUCKET=user-profiles

# AWS (for backups)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=post-master-backup
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# Email
EMAIL_PROVIDER=ses
EMAIL_FROM=Post Master <noreply@yourdomain.com>
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Payments
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_newrelic_key
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y
MIXPANEL_TOKEN=your_mixpanel_token

# Security & Rate Limiting
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false
API_KEY_SECRET=your_api_key_secret
ENCRYPTION_KEY=32_character_encryption_key_here

# File size limits (bytes)
MAX_FILE_SIZE=1073741824
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=1073741824
MAX_AUDIO_SIZE=52428800
MAX_DOCUMENT_SIZE=104857600

# Features
ENABLE_SOCKETS=true
ENABLE_GRAPHIQL=false
ENABLE_SWAGGER=true
ENABLE_CACHING=true
ENABLE_QUEUE=true
ENABLE_ANALYTICS=true
ENABLE_CDN=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_DIR=./logs

# Performance
WORKER_COUNT=4
CLUSTER_ENABLED=true
COMPRESSION_LEVEL=6
CACHE_TTL=3600

# Queue (Bull)
QUEUE_REDIS_URL=redis://:STRONG_REDIS_PASSWORD@redis-host:6379
QUEUE_CONCURRENCY=5
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF=5000

# Session
SESSION_SECRET=your_session_secret
SESSION_TTL=86400000
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# Firebase / Notifications
FIREBASE_PROJECT_ID=your_firebase_project
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----
FIREBASE_CLIENT_EMAIL=your_firebase_email
ONESIGNAL_APP_ID=your_onesignal_id
ONESIGNAL_API_KEY=your_onesignal_key

# Search
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=your_meili_key
ELASTICSEARCH_HOST=http://localhost:9200
ELASTICSEARCH_API_KEY=your_elastic_key

# CDN
CDN_PROVIDER=cloudinary
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_id
CLOUDFLARE_API_TOKEN=your_cloudflare_token
CDN_PURGE_ON_UPDATE=true

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your_backup_key
